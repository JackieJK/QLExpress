//byte→short→int→long→float→double
byte a = 0;
assert(a == 0);

//byte→short
short s = a;
assert(s == 0);

//byte→char
char r = a;
assert(r == 0);

//byte→int
int i = a;
assert(i == 0);

//byte→float
float f = a;
assert(f == 0.0);

//byte→double
double d = a;
assert(d == 0);

//byte→long
long l = a;
assert(l == 0);

//long→double
double d1 = l;
assert(d1 == 0);


